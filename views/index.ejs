<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Message Board</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Mini Message Board</h1>

    <% messages.forEach(message => { %>
    <div class="message">
      <p class="user"><%= message.user %></p>
      <p><%= message.text %></p>
      <p class="date"><%= new Date(message.added).toLocaleString() %></p>
    </div>
    <% }) %>

    <a href="/new">Add a New Message</a>
  </body>
</html>
